                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/add_call_view_margin_right"
                        android:layout_marginRight="@dimen/add_call_view_margin_right"
                        android:background="@color/colorDarkerGray" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_contact_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/add_call_text_view_padding"
                    android:text="@string/label_deal_contact_name"
                    android:textSize="@dimen/add_call_label_size" />

                <RelativeLayout
                    android:id="@+id/layout_contact_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/et_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/colorWhite"
                        android:focusable="false"
                        android:maxLines="1"
                        android:padding="@dimen/add_lead_edit_text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/add_lead_edit_text_size" />

                    <ImageView
                        android:id="@+id/iv_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:tint="@color/colorDarkerGray"
                        app:srcCompat="@drawable/ic_arrow_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignBottom="@id/et_contact_name"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/add_call_view_margin_right"
                        android:layout_marginRight="@dimen/add_call_view_margin_right"
                        android:background="@color/colorDarkerGray" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_description_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorHeadingBackground"
                    android:padding="16dp"
                    android:text="@string/header_deal_discripion_info" />

                <LinearLayout
                    android:id="@+id/linear_layout_deal_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_deal_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:padding="@dimen/add_call_text_view_padding"
                        android:text="@string/label_deal_description"
                        android:textSize="@dimen/add_call_label_size" />

                    <RelativeLayout
                        android:id="@+id/layout_deal_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <EditText
                            android:id="@+id/et_deal_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/colorWhite"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/add_lead_edit_text_padding"
                            android:textSize="@dimen/add_lead_edit_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignBottom="@id/et_deal_description"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="@dimen/add_call_view_margin_right"
                            android:layout_marginRight="@dimen/add_call_view_margin_right"
                            android:background="@color/colorDarkerGray" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_smart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHeadingBackground"
        android:elevation="5dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/footer_smart_view"
        android:textColor="@color/colorAccent" />
</RelativeLayout>