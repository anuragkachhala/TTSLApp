<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_customer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fission"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/TextColorBlack"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#ededed"
        android:visibility="gone"
        />

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/colorDarkerGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/iv_customer"
                android:layout_alignParentTop="true"
                android:text="anurag kachhala"
                android:textSize="16sp"
                android:textColor="@color/TextColorBlack"/>

            <TextView
                android:id="@+id/tv_customer_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/iv_customer"
                android:layout_below="@+id/tv_customer_name"
                android:text="kachhalaanurag@gmail.com"
                android:textColor="@android:color/darker_gray"/>
            <RelativeLayout
                android:id="@+id/iv_customer"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_width="45dp"
                android:layout_height="45dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_lead_list_image"/>

                <TextView
                    android:id="@+id/tv_customer_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TE"
                    android:gravity="center"/>
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>