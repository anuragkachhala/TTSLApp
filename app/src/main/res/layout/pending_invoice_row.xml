<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingBottom="@dimen/activity_vertical_padding">


    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/tv_due_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/check"
        android:text="dues for December"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:layout_toEndOf="@id/check" />

    <TextView
        android:id="@+id/tv_due_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_due_month"
        android:layout_alignStart="@+id/tv_due_month"
        android:layout_below="@+id/check"
        android:text="Due Date"
        />

    <TextView
        android:id="@+id/tv_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/tv_due_date1"
        android:layout_toRightOf="@+id/tv_due_date1"
        android:text="10-Nov-2011"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/tv_bill_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/check"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/tv_due_month"
        android:maxLines="1"
        android:text="27MSLIN111700229"
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_bill_amount"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_bill_no"
        android:layout_alignRight="@+id/tv_bill_no"
        android:layout_below="@+id/check"
        android:text="12255.15321"
        />

</RelativeLayout>
