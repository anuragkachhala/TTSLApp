                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorHeadingBackground"
                        android:padding="16dp"
                        android:text="@string/header_lead_description_information"
                        android:textColor="@color/TextColorBlack" />


                    <LinearLayout
                        android:id="@+id/layout_account_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/lead_detail_row_padding">

                        <TextView
                            style="@style/TVDetailLabel"
                            android:text="@string/label_add_account_discription" />

                        <TextView
                            android:id="@+id/tv_account_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/lead_detail_text_padding"

                            android:textColor="@color/TextColorBlack"
                            android:textSize="@dimen/lead_detail_text_size" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_smart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHeadingBackground"
        android:elevation="5dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/footer_show_all_fields"
        android:textColor="@color/colorAccent" />
</RelativeLayout>