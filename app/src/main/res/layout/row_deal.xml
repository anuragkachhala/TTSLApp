<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.software.ttsl.CustomView.CustomProgressBar

        android:id="@+id/progress_bar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/view_header"
        android:layout_below="@id/view_header"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:max="100"
        app:progress="20"
        app:ringColor="@color/colorHeadingBackground"
        app:ringProgressColor="@color/colorAccent"
        app:ringWidth="2dp"
        app:style="FILL"
        app:textColor="@color/colorPrimary"
        app:textIsShow="true"
        app:textSize="5dp" />
    <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle_lead_list_image"/>

        <TextView
            android:id="@+id/tv_deal_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TE"
            android:gravity="center"/>-->
    <!--</RelativeLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_header"
        android:layout_marginRight="16dp"


        android:layout_toRightOf="@id/progress_bar"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_deal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="anurag kachhala"
            android:textColor="@color/TextColorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_deal_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deal_name"
            android:text="kachhalaanurag@gmail.com"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tv_deal_closing_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deal_stage"
            android:text="kachhalaanurag@gmail.com"
            android:textColor="@android:color/darker_gray" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDarkerGray" />
    </LinearLayout>
</RelativeLayout>