<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trackship"
    tools:context=".NewModule.TrackCargoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spinner_cargo_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my"
                android:padding="15dp" />

            <EditText
                android:id="@+id/et_track_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my"
                android:gravity="left"
                android:hint="@string/hint_enter_track_no"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:padding="15dp"
                android:singleLine="true" />



            <Button
                android:id="@+id/btn_track_cargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:text="@string/btn_track"
                android:textColor="@color/btn_text_color" />


        </LinearLayout>

    </RelativeLayout>


</FrameLayout>