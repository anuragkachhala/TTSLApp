<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trackship"
    tools:context=".NewModule.AgentInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/et_port_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/my"
                android:gravity="left"
                android:hint="@string/hint_enter_port_no"
                android:imeActionLabel="Search"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:padding="15dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Please enter agent's port No."
                android:textColor="@color/colorBlack"
                android:visibility="invisible" />


            <Button
                android:id="@+id/btn_get_agent_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:text="@string/btn_agent_info"
                android:textColor="@color/btn_text_color" />


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>