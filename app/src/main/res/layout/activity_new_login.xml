<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".NewLoginActivity"
    >


    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_clear"
        android:padding="16dp"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to TTSL"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"/>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/widget_username"
            android:layout_width="match_parent"
            android:background="@drawable/bg_user_name"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_login_user_name"
                android:padding="8dp"
                android:background="#BDBDBD"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/widget_password"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_password"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#fe5960"
            >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:padding="8dp"
                android:background="@drawable/bg_password"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_login_button"
            android:layout_marginTop="5dp"
            android:text="@string/btn_sign_in"
            android:textColor="@color/colorWhite"

            />


    </LinearLayout>




</RelativeLayout>